                    add
                </span>
                <span>Button</span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbDropdown @ref="Dropdown1" class="dropdown" child-view-scope>
                <IgbDropdownItem>
                    Option
                </IgbDropdownItem>
                <IgbDropdownItem>
                    Option
                </IgbDropdownItem>
            </IgbDropdown>
        </div>
    </div>
</div>

