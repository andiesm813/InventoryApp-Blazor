@page "/child-view"

<div class="row-layout child-view-container">
    <div class="column-layout group">
        <div class="row-layout group_1">
            <div class="row-layout group_2">
                <IgbButton class="button" child-view-scope>
                    Button
                    <IgbRipple></IgbRipple>
                </IgbButton>
                <IgbButton class="button" child-view-scope>
